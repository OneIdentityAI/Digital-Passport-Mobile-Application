<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="140dip"
        android:layout_height="140dip"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_welcome_bg_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_back"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="4dip"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/back"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:lineSpacingExtra="6dip"
                    android:text="@string/profile"
                    android:textSize="30sp"
                    android:textColor="#717171"
                    app:fontFamily="sans-serif-medium"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_user"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_identity"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_home"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_phone"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone_number"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_birthday"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dob"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_passport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_passport"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/passport_id_license"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_passport"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_selfie"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/selfie"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_selfie"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_proof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dip"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="24dip"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/pastel_blue_proof"/>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/proof"
                                    android:textSize="16sp"
                                    android:textColor="#a0a7ff"
                                    app:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/text_proof"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dip"
                                    android:text=""
                                    android:textSize="14sp"
                                    android:textColor="#cfcfcf"
                                    app:fontFamily="sans-serif"/>
                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="10dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dip"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/next"/>
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/divider"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/layout_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dip"
                                android:orientation="horizontal">
                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="20dip"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/pastel_blue_wallet"/>
                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="10dip"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/wallet"
                                        android:textSize="16sp"
                                        android:textColor="#a0a7ff"
                                        app:fontFamily="sans-serif"/>

                                    <TextView
                                        android:id="@+id/text_wallet"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dip"
                                        android:text=""
                                        android:textSize="14sp"
                                        android:textColor="#cfcfcf"
                                        app:fontFamily="sans-serif"/>
                                </LinearLayout>
                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="10dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dip"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/next"/>
                            </LinearLayout>

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/divider"/>
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/divider"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>