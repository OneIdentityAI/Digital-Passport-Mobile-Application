<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_region"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dip"
        card_view:contentPadding="10dip"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="5dip"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_type"
                android:fontFamily="@font/nbi_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:text="Type" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dip" />

            <TextView
                android:id="@+id/text_sender"
                android:fontFamily="@font/nbi_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorIndigo"
                android:text="Sender" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dip" />
            <TextView
                android:id="@+id/text_detail"
                android:fontFamily="@font/nbi_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorGray"
                android:text="Detail" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dip" />

            <TextView
                android:id="@+id/text_action"
                android:fontFamily="@font/nbi_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorBlueText"
                android:text="@string/ekyc_detail" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dip" />

            <TextView
                android:id="@+id/text_datetime"
                android:fontFamily="@font/nbi_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="@color/colorIndigo"
                android:text="@string/try_it" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>